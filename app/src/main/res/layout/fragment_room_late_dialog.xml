<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.room.presentation.dialog.RoomLateDialog">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_Dl"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:backgroundTint="@color/whiteBg"
        android:background="@drawable/item_dialog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_Dl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:text="@string/dialog_late_text1"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_Dl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/dialog_late_text2"
            android:textColor="@color/dark_gray"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/tv_Dl1"
            app:layout_constraintTop_toBottomOf="@id/tv_Dl1" />

        <TextView
            android:id="@+id/tv_Dl_Late_People"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/dark_gray"
            android:textSize="18sp"
            android:maxLines="3"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_Dl2"
            app:layout_constraintStart_toStartOf="@+id/tv_Dl2" />

        <TextView
            android:id="@+id/tv_Dl_Late_Confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="25dp"
            android:text="@string/dialog_late_text3"
            android:textColor="@color/blue_violet"
            android:textSize="17sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>