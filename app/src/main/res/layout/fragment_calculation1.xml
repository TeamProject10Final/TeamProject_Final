<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_calculation1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="정산을 시작해볼까요?"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정산이력"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv11"
        app:layout_constraintTop_toBottomOf="@+id/tv11" />

    <TextView
        android:id="@+id/tv13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="을 입력해주세요."
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv12"
        app:layout_constraintStart_toEndOf="@+id/tv12" />

    <TextView
        android:id="@+id/tvDes11"
        android:layout_width="234dp"
        android:layout_height="18dp"
        android:layout_marginTop="40dp"
        android:text="지출 설명을 입력해주세요."
        app:layout_constraintStart_toStartOf="@+id/tv12"
        app:layout_constraintTop_toBottomOf="@+id/tv12" />


    <EditText
        android:id="@+id/etDes11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="30dp"
        android:focusableInTouchMode="true"
        android:hint="제목을 입력해 주세요"
        android:paddingBottom="15dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDes11" />






    <!--이 밑으로 다 수정하기-->
    <TextView
        android:id="@+id/tvDes12"
        android:layout_width="234dp"
        android:layout_height="18dp"
        android:layout_marginTop="50dp"
        android:text="지출한 날짜를 입력하세요."
        app:layout_constraintStart_toStartOf="@+id/etDes11"
        app:layout_constraintTop_toBottomOf="@+id/etDes11" />

    <TextView
        android:id="@+id/etDes12"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:gravity="start"
        android:hint="달력 아이콘을 눌러 시간을 선택 해주세요"
        android:paddingStart="3dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDes12"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:id="@+id/iv_Date"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_calendar"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="@+id/view2" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="0.8dp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="-4dp"
        android:layout_marginEnd="3dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/etDes12"
        app:layout_constraintStart_toStartOf="@id/etDes12"
        app:layout_constraintTop_toBottomOf="@+id/etDes12" />


    <TextView
        android:id="@+id/tvDes13"
        android:layout_width="234dp"
        android:layout_height="18dp"
        android:layout_marginTop="50dp"
        android:text="카테고리를 선택해주세요."
        app:layout_constraintStart_toStartOf="@+id/etDes12"
        app:layout_constraintTop_toBottomOf="@+id/etDes12" />

    <Spinner
        android:id="@+id/consumptionSpinner"
        android:layout_width="match_parent"
        android:layout_height="32.6dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:entries="@array/consumptionCategoryArray"
        android:foregroundGravity="left"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDes13" />

    <!--    <EditText-->
<!--        android:id="@+id/etDes13"-->
<!--        android:layout_width="336dp"-->
<!--        android:layout_height="74.5dp"-->
<!--        android:layout_marginTop="6dp"-->
<!--        android:background="@drawable/rounded_edittext3"-->
<!--        android:ems="10"-->
<!--        android:gravity="end"-->
<!--        android:inputType="text"-->
<!--        android:paddingTop="13dp"-->
<!--        android:paddingHorizontal="20dp"-->
<!--        android:textSize="32sp"-->
<!--        app:layout_constraintStart_toStartOf="@+id/tvDes13"-->
<!--        app:layout_constraintTop_toBottomOf="@id/tvDes13" />-->

    <View
        android:id="@+id/view3"
        android:layout_width="0dp"
        android:layout_height="0.8dp"
        android:layout_marginStart="23dp"
        android:layout_marginEnd="23dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.933"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/consumptionSpinner" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCalNext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_radius_arctic"
        android:text="다음"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>