        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etDes11"
        android:layout_width="336dp"
        android:layout_height="74.5dp"
        android:layout_marginTop="6dp"
        android:paddingTop="13dp"
        android:gravity="end"
        android:background="@drawable/rounded_edittext1"
        android:ems="10"
        android:paddingHorizontal="20dp"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="@+id/tvDes11"
        app:layout_constraintTop_toBottomOf="@id/tvDes11"
        android:focusableInTouchMode="true"/>






    <!--이 밑으로 다 수정하기-->






    <TextView
        android:id="@+id/tvDes12"
        android:layout_width="234dp"
        android:layout_height="18dp"
        android:layout_marginTop="250dp"
        android:text="지출한 날짜를 입력하세요."
        app:layout_constraintStart_toStartOf="@+id/tvDes11"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
