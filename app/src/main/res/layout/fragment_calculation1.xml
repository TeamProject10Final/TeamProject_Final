        android:layout_width="234dp"
        android:layout_height="18dp"
        android:layout_marginTop="350dp"
        android:text="카테고리를 선택해주세요."
        app:layout_constraintStart_toStartOf="@+id/tvDes12"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/consumptionSpinner"
        android:layout_width="336dp"
        android:layout_height="74.6dp"
        android:layout_marginTop="6dp"
        android:entries="@array/consumptionCategoryArray"
        android:spinnerMode="dropdown"
        android:background="@drawable/rounded_edittext3"
        android:ems="10"
        android:paddingStart="150dp"
        android:gravity="end"
        app:layout_constraintStart_toStartOf="@+id/tvDes13"
        app:layout_constraintTop_toBottomOf="@id/tvDes13"/>


