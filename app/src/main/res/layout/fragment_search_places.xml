<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.searchPlace.presentation.SearchPlacesFragment">

<!--    <com.google.android.gms.maps.MapView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:id="@+id/fg_map"/>-->

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/fg_map"/>


        <ImageView
            android:id="@+id/btnback"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_back_bt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_SeachBox"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_radius_stroke_lightblue"
            android:ems="10"
            android:hint="장소를 입력해 주세요"
            android:inputType="text"
            android:paddingHorizontal="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnback" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_SeachButton"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bg_radius_lightblue"
            android:text="검색"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/et_SeachBox"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/et_SeachBox"
            app:layout_constraintTop_toTopOf="@+id/et_SeachBox" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/cg_chipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/et_SeachBox"
            app:layout_constraintTop_toBottomOf="@id/et_SeachBox">

            <com.google.android.material.chip.Chip
                android:id="@+id/tv_restaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et_custom_blue"
                android:backgroundTint="@color/arctic"
                android:text="음식점" />

            <com.google.android.material.chip.Chip
                android:id="@+id/tv_cafe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et_custom_blue"
                android:backgroundTint="@color/arctic"
                android:text="카페" />

            <com.google.android.material.chip.Chip
                android:id="@+id/tv_cinema"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et_custom_blue"
                android:backgroundTint="@color/arctic"
                android:text="영화관" />

            <com.google.android.material.chip.Chip
                android:id="@+id/tv_park"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et_custom_blue"
                android:backgroundTint="@color/arctic"
                android:text="공원" />

            <com.google.android.material.chip.Chip
                android:id="@+id/tv_shoppingMall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/et_custom_blue"
                android:backgroundTint="@color/arctic"
                android:text="쇼핑몰" />

        </com.google.android.material.chip.ChipGroup>


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="150dp"
            android:src="@drawable/ic_map_mark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_SeachBox" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/tv_defaultText"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="길을 잃었다~★ 어딜 가야할까 "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />



</androidx.constraintlayout.widget.ConstraintLayout>