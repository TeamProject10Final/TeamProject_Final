<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MypromiseListFragment">

    <TextView
        android:id="@+id/tv_topTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="60dp"
        android:text="새싹"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/topUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용자 이름"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="@id/tv_topTitle"
        app:layout_constraintTop_toBottomOf="@id/tv_topTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="님"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/topUserName"
        app:layout_constraintStart_toEndOf="@id/topUserName" />

    <ImageView
        android:id="@+id/iv_promiseBack"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="10dp"
        android:background="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_titleBachground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_title_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topUserName" />

    <TextView
        android:id="@+id/tv_titleDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:text="24.06.05"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@id/iv_titleBachground"
        app:layout_constraintTop_toTopOf="@id/iv_titleBachground" />

    <TextView
        android:id="@+id/tv_titleName"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="제목이 들어가는 자리 만약이 긴 제목이 들어갈 경우 처리는 이렇게...."
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@id/tv_titleDefult"
        app:layout_constraintEnd_toEndOf="@id/tv_titleDefult"
        app:layout_constraintStart_toStartOf="@id/tv_titleDate"
        app:layout_constraintTop_toBottomOf="@id/tv_titleDate" />

    <TextView
        android:id="@+id/tv_titleDefult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="25dp"
        android:text="의 약속이 얼마남지 않았습니다"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_titleBachground"
        app:layout_constraintEnd_toEndOf="@id/iv_titleBachground" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_MyPromise"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/iv_titleBachground"
        app:layout_constraintStart_toStartOf="@id/iv_titleBachground"
        app:layout_constraintTop_toBottomOf="@id/iv_titleBachground"
        tools:listitem="@layout/item_rv_my_promise" />

</androidx.constraintlayout.widget.ConstraintLayout>