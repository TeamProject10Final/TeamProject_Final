<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    tools:context=".feature.room.presentation.view.RoomStartFragment">

    <TextView
        android:id="@+id/tv_Room_Start_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:text="우리 지금 만나,"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_Room_Start_Title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="약속"
        android:textColor="@color/black"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tv_Room_Start_Title"
        app:layout_constraintTop_toBottomOf="@id/tv_Room_Start_Title" />

    <TextView
        android:id="@+id/tv_Room_Start_Titl3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="을 잡아주세요."
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tv_Room_Start_Title2"
        app:layout_constraintStart_toEndOf="@id/tv_Room_Start_Title2" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Room_Start_Title2">

        <EditText
            android:id="@+id/et_Room_Title"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:hint="제목을 입력해 주세요"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:paddingBottom="15dp"
            android:paddingStart="3dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:theme="@style/EditTextStyle" />

        <TextView
            android:id="@+id/tv_Room_Date"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="40dp"
            android:gravity="start"
            android:hint="아이콘을 눌러 날짜를 선택 해주세요"
            android:paddingStart="3dp"
            android:paddingBottom="15dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_Room_Title"
            app:theme="@style/EditTextStyle"
            tools:ignore="RtlSymmetry" />


        <ImageView
            android:id="@+id/iv_Date"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_calendar"
            app:layout_constraintEnd_toEndOf="@+id/tv_Room_Date"
            app:layout_constraintTop_toBottomOf="@id/textView6" />

        <TextView
            android:id="@+id/tv_Room_Time"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="40dp"
            android:gravity="start"
            android:hint="아이콘을 눌러 시간을 선택 해주세요"
            android:paddingStart="3dp"
            android:paddingBottom="15dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_Room_Date"
            app:theme="@style/EditTextStyle"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:id="@+id/iv_Time"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ic_time"
            app:layout_constraintEnd_toEndOf="@+id/tv_Room_Time"
            app:layout_constraintTop_toBottomOf="@id/textView7" />

        <EditText
            android:id="@+id/et_Room_Penalty"
            style="@style/EditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="40dp"
            android:hint="예) 교통비 내주기"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:paddingBottom="15dp"
            android:paddingStart="3dp"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_Room_Time"
            app:theme="@style/EditTextStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="늦는 친구에게 주어질 벌칙을 정해 주세요!"
            android:textColor="@color/gray"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@id/et_Room_Penalty"
            app:layout_constraintTop_toBottomOf="@id/et_Room_Penalty" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="약속 제목"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/et_Room_Title"
            app:layout_constraintStart_toStartOf="@+id/et_Room_Title" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="약속 날짜"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_Room_Date"
            app:layout_constraintStart_toStartOf="@+id/tv_Room_Date" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="약속 시간"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_Room_Time"
            app:layout_constraintStart_toStartOf="@+id/tv_Room_Time" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-2dp"
            android:text="벌칙 내용"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/et_Room_Penalty"
            app:layout_constraintStart_toStartOf="@+id/et_Room_Penalty" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>