<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.room.presentation.start.RoomStartFragment"
    android:background="@color/white"
    android:clickable="true">

    <TextView
        android:id="@+id/tv_Room_Start_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:textSize="28sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_Room_Start_Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/et_Room_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="약속 제목"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:paddingBottom="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_Room_Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="약속 날짜"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="21dp"
            android:gravity="start"
            android:paddingBottom="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_Room_Title"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/tv_Room_Date"
            app:layout_constraintStart_toStartOf="@id/tv_Room_Date"
            app:layout_constraintEnd_toEndOf="@+id/tv_Room_Date" />

        <ImageView
            android:id="@+id/iv_Date"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_calendar"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@+id/tv_Room_Date"
            app:layout_constraintEnd_toEndOf="@+id/tv_Room_Date"
            app:layout_constraintBottom_toBottomOf="@+id/tv_Room_Date" />


        <TextView
            android:id="@+id/tv_Room_Time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="약속 시간"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="21dp"
            android:gravity="start"
            android:paddingBottom="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_Room_Date"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/tv_Room_Time"
            app:layout_constraintStart_toStartOf="@id/tv_Room_Time"
            app:layout_constraintEnd_toEndOf="@+id/tv_Room_Time" />

        <ImageView
            android:id="@+id/iv_Time"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_time"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@+id/tv_Room_Time"
            app:layout_constraintEnd_toEndOf="@+id/tv_Room_Time"
            app:layout_constraintBottom_toBottomOf="@+id/tv_Room_Time" />

        <EditText
            android:id="@+id/et_Room_Penalty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="벌칙 내용"
            android:textColorHint="@color/black"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:paddingBottom="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_Room_Time" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="늦는 친구에게 주어질 벌칙을 정해 주세요!"
            android:textSize="12dp"
            android:textColor="@color/gray"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/et_Room_Penalty"
            app:layout_constraintStart_toStartOf="@id/et_Room_Penalty"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>