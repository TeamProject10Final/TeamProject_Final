<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    tools:context=".feature.room.presentation.view.RoomStartFragment"
    android:background="@color/backGround">


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_Room_Start_Next"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_Room_Start_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="40dp"
                android:text="@string/room_start_text1"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_Room_Start_Title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/room_start_text2"
                android:textSize="35sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/tv_Room_Start_Title"
                app:layout_constraintTop_toBottomOf="@id/tv_Room_Start_Title" />

            <TextView
                android:id="@+id/tv_Room_Start_Titl3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/room_start_text3"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@id/tv_Room_Start_Title2"
                app:layout_constraintStart_toEndOf="@id/tv_Room_Start_Title2" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_Room_Start_Title2">


                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/room_start_text4"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@+id/et_Room_Title"
                    app:layout_constraintStart_toStartOf="@+id/et_Room_Title" />

                <EditText
                    android:id="@+id/et_Room_Title"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="40dp"
                    android:hint="@string/room_start_text5"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:paddingStart="3dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="15dp"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:theme="@style/EditTextStyle" />


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/room_start_text6"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_Room_Date"
                    app:layout_constraintStart_toStartOf="@+id/tv_Room_Date" />

                <EditText
                    android:id="@+id/tv_Room_Date"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginEnd="40dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="start"
                    android:hint="@string/room_start_text7"
                    android:importantForAutofill="no"
                    android:inputType="date"
                    android:paddingStart="3dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="15dp"
                    android:textCursorDrawable="@android:color/transparent"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/et_Room_Title"
                    app:theme="@style/EditTextStyle" />


                <ImageView
                    android:id="@+id/iv_Date"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/ic_calendar"
                    android:contentDescription="@string/image_calendar"
                    app:layout_constraintEnd_toEndOf="@+id/tv_Room_Date"
                    app:layout_constraintTop_toBottomOf="@id/textView6" />


                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/room_start_text8"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_Room_Time"
                    app:layout_constraintStart_toStartOf="@+id/tv_Room_Time" />

                <EditText
                    android:id="@+id/tv_Room_Time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginEnd="40dp"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="start"
                    android:hint="@string/room_start_text9"
                    android:importantForAutofill="no"
                    android:inputType="time"
                    android:paddingStart="3dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="15dp"
                    android:textCursorDrawable="@android:color/transparent"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Room_Date"
                    app:theme="@style/EditTextStyle" />

                <ImageView
                    android:id="@+id/iv_Time"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/ic_time"
                    android:contentDescription="@string/image_time"
                    app:layout_constraintEnd_toEndOf="@+id/tv_Room_Time"
                    app:layout_constraintTop_toBottomOf="@id/textView7" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="-2dp"
                    android:text="@string/room_start_text10"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toTopOf="@+id/et_Room_Penalty"
                    app:layout_constraintStart_toStartOf="@+id/et_Room_Penalty" />

                <EditText
                    android:id="@+id/et_Room_Penalty"
                    style="@style/EditTextStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginEnd="40dp"
                    android:hint="@string/room_start_text11"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:paddingStart="3dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="15dp"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Room_Time"
                    app:theme="@style/EditTextStyle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="@string/room_start_text12"
                    android:textColor="@color/gray"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@id/et_Room_Penalty"
                    app:layout_constraintTop_toBottomOf="@id/et_Room_Penalty" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Room_Start_Next"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_radius_arctic"
        android:backgroundTint="@color/colorMain1"
        android:text="@string/room_start_text13"
        android:textAllCaps="false"
        android:textColor="@color/textColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>