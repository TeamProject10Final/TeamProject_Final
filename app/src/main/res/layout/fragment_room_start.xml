<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.room.presentation.view.RoomStartFragment"
    android:background="@color/white"
    android:clickable="true">

    <TextView
        android:id="@+id/tv_Room_Start_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="50dp"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_Room_Start_Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/et_Room_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="40dp"
            android:hint="제목을 입력해 주세요"
            android:paddingBottom="15dp"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_Room_Date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="40dp"
            android:gravity="start"
            android:paddingBottom="10dp"
            android:hint="달력 아이콘을 눌러 날짜를 선택 해주세요"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingStart="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_Room_Title"
            tools:ignore="RtlSymmetry" />

        <View
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="0.8dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="-4dp"
            android:layout_marginEnd="3dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/tv_Room_Date"
            app:layout_constraintStart_toStartOf="@id/tv_Room_Date"
            app:layout_constraintTop_toBottomOf="@+id/tv_Room_Date" />


        <ImageView
            android:id="@+id/iv_Date"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/ic_calendar"
            app:layout_constraintBottom_toBottomOf="@+id/view"
            app:layout_constraintEnd_toEndOf="@+id/tv_Room_Date" />

        <TextView
            android:id="@+id/tv_Room_Time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="61dp"
            android:layout_marginEnd="40dp"
            android:gravity="start"
            android:paddingBottom="10dp"
            android:hint="시계 아이콘을 눌러 시간을 선택 해주세요"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingStart="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_Room_Date"
            tools:ignore="RtlSymmetry" />

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="0.8dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="-4dp"
            android:layout_marginEnd="3dp"
            android:background="@color/black"
            app:layout_constraintEnd_toEndOf="@+id/tv_Room_Time"
            app:layout_constraintStart_toStartOf="@id/tv_Room_Time"
            app:layout_constraintTop_toBottomOf="@+id/tv_Room_Time" />

        <ImageView
            android:id="@+id/iv_Time"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/ic_time"
            app:layout_constraintBottom_toBottomOf="@+id/view2"
            app:layout_constraintEnd_toEndOf="@+id/tv_Room_Time" />

        <EditText
            android:id="@+id/et_Room_Penalty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="40dp"
            android:hint="예) 교통비 내주기"
            android:paddingBottom="15dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_Room_Time" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="늦는 친구에게 주어질 벌칙을 정해 주세요!"
            android:textSize="12dp"
            android:textColor="@color/gray"
            android:layout_marginStart="5dp"
            app:layout_constraintTop_toBottomOf="@id/et_Room_Penalty"
            app:layout_constraintStart_toStartOf="@id/et_Room_Penalty"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginBottom="-2dp"
            android:text="약속 제목"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/et_Room_Title"
            app:layout_constraintStart_toStartOf="@+id/et_Room_Title" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_marginBottom="5dp"
            android:text="약속 날짜"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_Room_Date"
            app:layout_constraintStart_toStartOf="@+id/tv_Room_Date" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="약속 시간"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/tv_Room_Time"
            app:layout_constraintStart_toStartOf="@+id/tv_Room_Time" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-2dp"
            android:text="벌칙 내용"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/et_Room_Penalty"
            app:layout_constraintStart_toStartOf="@+id/et_Room_Penalty" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>