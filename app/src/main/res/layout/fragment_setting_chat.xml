<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.setting.presentation.view.question.SettingChatFragment"
    android:background="@color/backGround">

    <ImageView
        android:id="@+id/iv_Setting_Chat_Back"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/image_back"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_Setting_Chat_Back">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_Setting_Chat1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tv_Setting_Chat_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="40dp"
                    android:text="@string/setting_chat_text1"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_Setting_Chat_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_chat_text2"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/tv_Setting_Chat_1"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Setting_Chat_1" />

                <TextView
                    android:id="@+id/tv_Setting_Chat1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_chat_text3"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/tv_Setting_Chat_2"
                    app:layout_constraintTop_toBottomOf="@+id/tv_Setting_Chat_2" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/ic_smile"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_Setting_Chat1"
                    app:layout_constraintStart_toEndOf="@+id/tv_Setting_Chat1"
                    android:contentDescription="@string/image_decoration"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_Setting_Chat_Kakao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/item_stroke_arctic"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@+id/cl_Setting_Chat1">

                <ImageView
                    android:id="@+id/iv_Setting_Chat1"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/ic_kakao"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="@string/image_decoration"/>

                <TextView
                    android:id="@+id/tv_Setting_Chat2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/setting_chat_text4"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_Setting_Chat1"
                    app:layout_constraintStart_toEndOf="@+id/iv_Setting_Chat1"
                    app:layout_constraintTop_toTopOf="@+id/iv_Setting_Chat1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/setting_chat_text5"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/iv_Setting_Chat1"
                    app:layout_constraintTop_toBottomOf="@+id/iv_Setting_Chat1" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_Setting_Chat_Discord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/item_stroke_arctic"
                android:padding="15dp"
                app:layout_constraintTop_toBottomOf="@+id/cl_Setting_Chat_Kakao">

                <ImageView
                    android:id="@+id/iv_Setting_Chat3"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/ic_discord"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="@string/image_decoration"/>

                <TextView
                    android:id="@+id/tv_Setting_Chat4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="@string/setting_chat_text6"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_Setting_Chat3"
                    app:layout_constraintStart_toEndOf="@+id/iv_Setting_Chat3"
                    app:layout_constraintTop_toTopOf="@+id/iv_Setting_Chat3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/setting_chat_text7"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/iv_Setting_Chat3"
                    app:layout_constraintTop_toBottomOf="@+id/iv_Setting_Chat3" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>