<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_calculation1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="@string/cal4_top_title1"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/cal4_top_title2"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tv31"
        app:layout_constraintStart_toEndOf="@id/tv31" />

    <TextView
        android:id="@+id/tv33"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:text="@string/cal4_top_title3"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/tv31"
        app:layout_constraintTop_toBottomOf="@id/tv31" />

    <ScrollView
        android:id="@+id/svConsumption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/rounded_edittext1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv33">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/tvDes31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/cal2_text1"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvRes31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/tvDes31"
                app:layout_constraintTop_toBottomOf="@id/tvDes31" />

            <TextView
                android:id="@+id/tvDes32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/cal2_text2"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/tvRes31"
                app:layout_constraintTop_toBottomOf="@id/tvRes31" />

            <TextView
                android:id="@+id/tvRes32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/tvDes32"
                app:layout_constraintTop_toBottomOf="@id/tvDes32" />

            <TextView
                android:id="@+id/tvDes33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/cal3_text3"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/tvRes32"
                app:layout_constraintTop_toBottomOf="@id/tvRes32" />


            <TextView
                android:id="@+id/tvRes33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/tvDes33"
                app:layout_constraintTop_toBottomOf="@id/tvDes33" />

            <TextView
                android:id="@+id/tvDes34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/cal2_text3"
                android:textSize="15sp"
                app:layout_constraintStart_toStartOf="@id/tvRes33"
                app:layout_constraintTop_toBottomOf="@id/tvRes33" />

            <TextView
                android:id="@+id/tvRes34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/tvDes34"
                app:layout_constraintTop_toBottomOf="@id/tvDes34" />

            <TextView
                android:id="@+id/tvDes35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="20dp"
                android:text="@string/cal3_text1"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvRes34" />

            <TextView
                android:id="@+id/tvRes35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:gravity="end"
                android:textSize="30sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/tvDes35"
                app:layout_constraintTop_toBottomOf="@id/tvDes35" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <android.widget.Button
        android:id="@+id/btnCalFinish"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_radius_lightblue"
        android:text="@string/cal4_btn_text1"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnCalExit"
        app:layout_constraintStart_toStartOf="parent" />

    <android.widget.Button
        android:id="@+id/btnCalExit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/bg_radius_lightblue"
        android:text="@string/cal4_btn_text2"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnCalFinish" />

</androidx.constraintlayout.widget.ConstraintLayout>
