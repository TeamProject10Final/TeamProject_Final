<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_calculation1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="현기증 난단 말이에요,"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="정산금액"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv21"
        app:layout_constraintTop_toBottomOf="@+id/tv21" />

    <TextView
        android:id="@+id/tv23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="을 입력해주세요."
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv22"
        app:layout_constraintStart_toEndOf="@+id/tv22" />

    <TextView
        android:id="@+id/tvDes21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="정산 총 금액"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv22" />

    <EditText
        android:id="@+id/etDes21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:focusableInTouchMode="true"
        android:hint="정산할 총 금액을 입력해주세요."
        android:inputType="number"
        android:paddingHorizontal="10dp"
        android:paddingBottom="15dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDes21" />


    <!--이 밑으로 다 수정하기-->


    <TextView
        android:id="@+id/tvWon21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="6.5dp"
        android:text="원"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/etDes21"
        app:layout_constraintEnd_toEndOf="@+id/etDes21"
        app:layout_constraintTop_toTopOf="@+id/etDes21"
        app:layout_constraintVertical_bias="0.647" />


    <EditText
        android:id="@+id/etDes22"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:hint="위의 텍스트를 터치하여 벌금자를 바꿀 수 있어요."
        android:inputType="number"
        android:paddingHorizontal="10dp"
        android:paddingBottom="15dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPenalty" />

    <TextView
        android:id="@+id/btnPenalty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"

        android:text="나의 벌금추가"
        app:layout_constraintStart_toStartOf="@+id/etDes21"
        app:layout_constraintTop_toBottomOf="@+id/etDes21" />

    <TextView
        android:id="@+id/tvWon22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="원"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@+id/etDes22"
        app:layout_constraintEnd_toEndOf="@+id/etDes22"
        app:layout_constraintBottom_toBottomOf="@+id/etDes22"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="6.5dp"/>


    <TextView
        android:id="@+id/tvDes23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="정산할 인원수를 입력해주세요."
        app:layout_constraintStart_toStartOf="@+id/etDes22"
        app:layout_constraintTop_toBottomOf="@+id/etDes22" />

    <EditText
        android:id="@+id/etDes23"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-2dp"
        android:layout_marginEnd="20dp"
        android:ems="10"
        android:inputType="number"
        android:paddingHorizontal="10dp"
        android:paddingTop="13dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDes23" />

    <TextView
        android:id="@+id/tvWon23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="6.5dp"
        android:text="명"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/etDes23"
        app:layout_constraintEnd_toEndOf="@+id/etDes23"
        app:layout_constraintTop_toTopOf="@+id/etDes23" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnCalEnd"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/btn_radius_arctic"
        android:text="다음"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>