<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_Item_Friend"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ic_user"
        android:clipToOutline="true"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tv_Item_Friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="길동이"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/iv_Item_Friend"
        app:layout_constraintStart_toStartOf="@+id/iv_Item_Friend"
        app:layout_constraintEnd_toEndOf="@+id/iv_Item_Friend"/>


</androidx.constraintlayout.widget.ConstraintLayout>