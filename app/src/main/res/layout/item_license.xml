<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">

    <ImageView
        android:id="@+id/iv_Item_License"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/ic_impact"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/image_decoration"/>

    <TextView
        android:id="@+id/tv_Item_License"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@id/iv_Item_License"
        app:layout_constraintTop_toTopOf="@id/iv_Item_License" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_Item_License"
        app:layout_constraintStart_toEndOf="@+id/tv_Item_License"
        app:layout_constraintTop_toTopOf="@+id/tv_Item_License" />

    <TextView
        android:id="@+id/tv_Item_License_Uri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/malibu"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/iv_Item_License"
        app:layout_constraintTop_toBottomOf="@id/iv_Item_License" />


</androidx.constraintlayout.widget.ConstraintLayout>