<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Custom font 적용 -->
    <style name="customTextViewFontStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="customButtonFontStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="customEditTextFontStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="customRadioButtonFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.RadioButton">
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>

    <style name="customCheckboxFontStyle" parent="@android:style/Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:fontFamily">@font/pretendard_regular</item>
    </style>


    <style name="TimePickerTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/blue_violet</item>
        <item name="android:textColor">@color/blue_violet</item>
        <item name="android:timePickerStyle">@style/MyTimePickerStyle</item>
    </style>

    <style name="MyTimePickerStyle" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
    </style>

    <style name="DatePickerStyle" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <!-- 상단 색 변경 -->
        <item name="colorAccent">@color/blue_violet</item>
        <!-- dialog의 배경 변경 -->
        <item name="background">@color/blue_violet</item>
        <!-- 선택한 날짜를 표시할 색상 -->
        <item name="colorControlActivated">@color/blue_violet</item>
        <!--        <item name="colorControlHighlight">@color/blue_violet</item>-->
        <!-- 취소/확인버튼 색상 -->
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/gray</item>
        <item name="android:textSelectHandle">@color/black</item>
        <item name="colorControlActivated">@color/malibu</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="EditTextCursorStyle." parent="Widget.AppCompat.EditText">
        <item name="android:textColorHighlight">@color/bright_lilac</item>
        <item name="android:textCursorDrawable">@color/bright_lilac</item>
        <item name="android:textSelectHandle">@color/bright_lilac</item>
    </style>

    <style name="BottomSheetTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalBorder20WhiteStyle</item>
        <item name="android:windowIsFloating">false</item>
    </style>
    <style name="AppModalBorder20WhiteStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/item_bottomsheet</item>
    </style>

    <style name="AppTheme.NumberPicker" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="colorControlNormal">@color/malibu</item>
    </style>

    <style name="CreateProfileTheme" parent="Theme.AppCompat.Light">
        <!-- 상단 Title 배경색 -->
        <item name="colorAccent">@color/colorMain1</item>
    </style>



</resources>
